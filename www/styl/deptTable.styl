.details
  position absolute
  top 0px
  width 100%
  height 100%
  overflow auto
  table
    position absolute
    width 100%
    border-collapse collapse
    tbody
      td
      th
        background rgba(220,220,220,0.1)
      tr:nth-child(2n)
        td
        th
          background rgba(255,255,255,0.1)
    th
    td
      padding 5px 5px 5px 15px
      border-bottom 1px dashed #aaa
    th
      font-weight normal
      text-align left
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      max-width 96px
      position relative
      .amount
        position absolute
        left 0px
        top 50%
        border-radius 50%
        transform translate(-50%, -50%)
        z-index 1
        border 1px solid black
        opacity 0.6
        &.color-0
          color = #d73027
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
        &.color-1
          color = #f46d43
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
        &.color-2
          color = #fdae61
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
        &.color-3
          color = #fee08b
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
        &.color-4
          color = #d9ef8b
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
        &.color-5
          color = #a6d96a
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
        &.color-6
          color = #66bd63
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
        &.color-7
          color = #1a9850
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      .nazev
        position relative
        z-index 2
    td.value
      width 1px
      white-space nowrap
      .rozpocet
      .diff
        float left
        clear left
        display block
