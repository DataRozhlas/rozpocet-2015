@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  padding-left 30px
  padding-right 10px
  height 500px
  overflow hidden
  .deptList
    .department
      position relative
      width (960px / 5)
      &:nth-child(1)
        width 100%
        height (960px / 3 + 80)
        margin-bottom 50px
        .sumContainer
          top 80px
      &:nth-child(2)
      &:nth-child(3)
      &:nth-child(4)
        width (960px / 3)
        height 290px
        .sumContainer
          top 0px
      .sumContainer
        top -40px
      height 200px
      float left
      h3
        text-align center
      .sumContainer
        position absolute
        left 0px
        width 100%
        height (960px / 3)
        h4
          top 50px
          font-weight normal
          &.bigEnough
            top 0px
          margin 0px
          position absolute
          line-height @height
          text-align center
          width 100%
        .sum
          position absolute
          left 50%
          top 50%
          transform translate(-50%, -50%)
          background red
          border-radius 50%
