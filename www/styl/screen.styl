@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  padding-left 30px
  padding-right 10px
  height 500px
  overflow hidden
  .deptList
    .department
      &.color-0
        .sum
          color = #d73027
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      &.color-1
        .sum
          color = #f46d43
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      &.color-2
        .sum
          color = #fdae61
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      &.color-3
        .sum
          color = #fee08b
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      &.color-4
        .sum
          color = #d9ef8b
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      &.color-5
        .sum
          color = #a6d96a
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      &.color-6
        .sum
          color = #66bd63
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      &.color-7
        .sum
          color = #1a9850
          background-color: lighten(color, 30%)
          border-color: darken(color, 40%)
      position relative
      width (960px / 5)
      &:nth-child(1)
        width 100%
        height (960px / 3 + 80)
        margin-bottom 50px
        .sumContainer
          top 80px
      &:nth-child(2)
      &:nth-child(3)
      &:nth-child(4)
        width (960px / 3)
        height 290px
        .sumContainer
          top 0px
      .sumContainer
        top -40px
      height 200px
      float left
      h3
        text-align center
      .sumContainer
        position absolute
        left 0px
        width 100%
        height (960px / 3)
        h4
          top 50px
          font-weight normal
          &.bigEnough
            top 0px
          margin 0px
          position absolute
          line-height @height
          text-align center
          width 100%
        .sum
          position absolute
          left 50%
          top 50%
          transform translate(-50%, -50%)
          border-radius 50%
          border-width 1px
          border-style solid
